<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/all_content"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/viewColor">
                    <RelativeLayout
                        android:id="@+id/avatar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/touch_anim_default">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="头像"
                            android:textColor="@color/textGeneral"
                            android:textSize="15dp"/>
                        <edu.ace.infinite.view.CircleImage
                            android:id="@+id/avatarImageView"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/person"/>
                    </RelativeLayout>
                    <View
                        android:layout_marginStart="10dp"
                        android:layout_height="0.8dp"
                        android:layout_width="match_parent"
                        android:background="@color/cutOffLine"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/touch_anim_default">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户名"
                            android:textColor="@color/textGeneral"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/usernameTextView"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="zhouyu"
                            android:textSize="14dp"
                            android:textColor="@color/textTinge"/>

                    </RelativeLayout>
                    <View
                        android:layout_marginStart="10dp"
                        android:layout_height="0.8dp"
                        android:layout_width="match_parent"
                        android:background="@color/cutOffLine"/>

                    <RelativeLayout
                        android:id="@+id/nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/touch_anim_default">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昵称"
                            android:textColor="@color/textGeneral"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/nicknameTextView"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="."
                            android:textSize="14dp"
                            android:textColor="@color/textTinge"/>
                    </RelativeLayout>
                    <View
                        android:layout_marginStart="10dp"
                        android:layout_height="0.8dp"
                        android:layout_width="match_parent"
                        android:background="@color/cutOffLine"/>

                    <RelativeLayout
                        android:id="@+id/sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/touch_anim_default">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别"
                            android:textColor="@color/textGeneral"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/sexTextView"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:textSize="14dp"
                            android:textColor="@color/textTinge"/>
                    </RelativeLayout>

                    <View
                        android:layout_marginStart="10dp"
                        android:layout_height="0.8dp"
                        android:layout_width="match_parent"
                        android:background="@color/cutOffLine"/>

                    <RelativeLayout
                        android:id="@+id/introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/touch_anim_default">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="简介"
                            android:textColor="@color/textGeneral"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/introduceTextView"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="."
                            android:textSize="14dp"
                            android:textColor="@color/textTinge"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/viewColor">
                    <RelativeLayout
                        android:id="@+id/birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/touch_anim_default">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生日"
                            android:textColor="@color/textGeneral"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/birthdayTextView"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未选择"
                            android:textSize="14dp"
                            android:textColor="@color/textTinge"/>
                    </RelativeLayout>
                    <View
                        android:layout_marginStart="10dp"
                        android:layout_height="0.8dp"
                        android:layout_width="match_parent"
                        android:background="@color/cutOffLine"/>

                    <RelativeLayout
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/touch_anim_default">
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所在地区"
                            android:textColor="@color/textGeneral"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/districtTextView"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未选择"
                            android:textSize="14dp"
                            android:textColor="@color/textTinge"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/viewColor">
        <LinearLayout
            android:id="@+id/top_bar_message"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/transparent">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/back"
                    android:gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/touch_radius">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/return_icon"
                        app:tint="@color/textGeneral"/>
                </LinearLayout>

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/top_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="个人信息"
                    android:textColor="@color/textGeneral"
                    android:textSize="17dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>